extends layout

block content
  h2 Add new category
  form(
    method='POST'
    action='/category/create'
    class='form'
  )
    div(
      class='form-field'
    )
      label(for='category') Category name
      input(
        type='text'
        id='category'
        name='category'
      )

    button(type='submit') Submit
